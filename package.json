{
  "name": "site-gamer-2025",
  "version": "1.0.0",
  "description": "Site de gestion de produits gaming avec PostgreSQL",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "setup": "npm install",
    "db:init": "psql -U postgres -d gamer_2025 -f backend/schema.sql",
    "db:populate": "psql -U postgres -d gamer_2025 -f backend/gestion_produits.sql",
    "build:css": "cleancss -o frontend/public/assets/css/styles.min.css frontend/public/assets/css/styles.css",
    "build:js": "terser frontend/public/assets/js/fiches.js -o frontend/public/assets/js/fiches.min.js && terser frontend/public/assets/js/fiche-produit.js -o frontend/public/assets/js/fiche-produit.min.js",
    "build:all": "npm run build:css && npm run build:js",
    "clean": "rm -rf frontend/public/assets/css/*.min.css frontend/public/assets/js/*.min.js"
  },
  "dependencies": {
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "multer": "^2.0.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "clean-css-cli": "^5.6.3",
    "nodemon": "^3.0.2",
    "terser": "^5.44.0"
  },
  "keywords": [
    "gaming",
    "postgresql",
    "admin",
    "products"
  ],
  "author": "Ton nom",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "private": true
}

